<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="140sp"
                android:layout_height="140sp"
                android:background="@drawable/circle_contact"
                android:padding="5dp" />

            <TextView
                android:id="@+id/user_initial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="IN"
                android:textSize="50sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="USER NAME"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_default" />

        <TextView
            android:id="@+id/user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="USER PHONE"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_small" />

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_button"
            android:backgroundTint="@android:color/holo_blue_dark">

            <EditText
                android:id="@+id/send_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="0.00"
                android:maxLength="8"
                android:inputType="numberDecimal"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/size_superbig"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:backgroundTint="@android:color/holo_red_light">

                <TextView
                    android:id="@+id/lbl_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="CANCELAR"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/size_default"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button">

                <TextView
                    android:id="@+id/lbl_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ENVIAR"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size_default"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>